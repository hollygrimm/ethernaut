    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "hardhat test",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "hh",
            "args": ["test", "--network", "hardhat"],
            "cwd": "${workspaceFolder}/${relativeFileDirname}/../..",
            "console": "integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "hardhat run task",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "hh",
            "args": ["${fileBasenameNoExtension}", "--network", "localhost"],
            "cwd": "${workspaceFolder}/${relativeFileDirname}/../..",
            "console": "integratedTerminal",
        }
    ]
}